<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3001</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="300"/>
                <effect type="slide" start="400%,0" end="0,0" time="400"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="400"/>
                <effect type="slide" start="0,0" end="400%,0" time="400"/>
            </animation>
            <!-- Background -->
            <control type="group">
                <control type="image">
                    <height>300</height>
                    <top>0</top>
                    <width>100%</width>
                    <texture colordiffuse="ff262626">gradient.png</texture>
                </control>
            </control>
            <control type="group">
                <height>20%</height>
                <width>25%</width>
                <left>20</left>
                <bottom>75%</bottom>

                <!-- Thumb -->
                <control type="group">
                    <top>7</top>
                    <right>148</right>
                    <width>61%</width>
                    <height>76%</height>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture colordiffuse="FF12A0C7" diffuse="diffuse.png">$INFO[Window.Property(texture.white)]</texture>
                        <visible>String.IsEmpty(Window.Property(item.art.thumb)) + String.IsEmpty(Window.Property(item.art.landscape)) + String.IsEmpty(Window.Property(item.art.fanart))</visible>
                    </control>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture diffuse="diffuse.png">$INFO[Window.Property(item.art.landscape)]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture diffuse="diffuse.png">$INFO[Window.Property(item.art.fanart)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(Window.Property(item.art.landscape))</visible>
                    </control>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture diffuse="diffuse.png">$INFO[Window.Property(item.art.thumb)]</texture>
                        <aspectratio>scale</aspectratio>
                        <visible>String.IsEmpty(Window.Property(item.art.landscape)) + String.IsEmpty(Window.Property(item.art.fanart))</visible>
                    </control>
                    <control type="progress" id="3014">
                        <width>100%</width>
                        <bottom>0</bottom>
                        <height>8</height>
                        <reveal>true</reveal>
                        <righttexture></righttexture>
                        <overlaytexture></overlaytexture>
                        <lefttexture></lefttexture>
                        <texturebg colordiffuse="33FFFFFF" diffuse="diffuse.png">white.png</texturebg>
                        <midtexture colordiffuse="$INFO[Window.Property(settings.color)]" diffuse="diffuse.png">white.png</midtexture>
                    </control>
                </control>
                <!-- Labels -->
                <control type="group">
                    <top>0</top>
                    <left>370</left>
                    <width>1200</width>
                    <!-- Time -->
                    <control type="label">
                        <width>auto</width>
                        <top>5</top>
                        <height>35</height>
                        <aligny>center</aligny>
                        <font>font36_title</font>
                        <textcolor>eeffffff</textcolor>
                        <shadowcolor>00000000</shadowcolor>
                        <label>Next Episode in [COLOR $INFO[Window.Property(settings.color)]]$INFO[Player.TimeRemaining(ss),,][/COLOR] seconds...</label>
                        <visible>!Integer.IsGreater(Player.TimeRemaining,59)</visible>
                    </control>
                    <control type="label">
                        <width>auto</width>
                        <height>35</height>
                        <aligny>center</aligny>
                        <font>font25_title</font>
                        <textcolor>eeffffff</textcolor>
                        <shadowcolor>00000000</shadowcolor>
                        <label>$ADDON[plugin.video.seren 30232]</label>
                        <visible>Integer.IsGreater(Player.TimeRemaining,59)</visible>
                    </control>
                    <!-- Details -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>40</height>
                        <top>50</top>
                        <itemgap>2</itemgap>
                        <left>0</left>
                        <usecontrolcoords>true</usecontrolcoords>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>eeffffff</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>$INFO[Window.Property(item.info.tvshowtitle)]</label>
                            <visible>!String.IsEmpty(Window.Property(item.info.tvshowtitle))</visible>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>$INFO[Window.Property(settings.color)]</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>|</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>eeffffff</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>$INFO[Window.Property(item.info.season),S,]$INFO[Window.Property(item.info.episode),E,]</label>
                            <visible>!String.IsEmpty(Window.Property(item.info.season) + !String.IsEmpty(Window.Property(item.info.episode))</visible>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>$INFO[Window.Property(settings.color)]</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>|</label>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>eeffffff</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>$INFO[Window.Property(item.info.title)]</label>
                            <visible>!String.IsEmpty(Window.Property(item.info.title))</visible>
                        </control>
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <font>font12</font>
                            <textcolor>$INFO[Window.Property(settings.color)]</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <label>|</label>
                        </control>
                        <!--<control type="label">-->
                        <!--<width>auto</width>-->
                        <!--<height>35</height>-->
                        <!--<aligny>center</aligny>-->
                        <!--<font>font12</font>-->
                        <!--<textcolor>eeffffff</textcolor>-->
                        <!--<shadowcolor>00000000</shadowcolor>-->
                        <!--<label>$INFO[Window.Property(item.info.year),,   ]</label>-->
                        <!--<visible>!String.IsEmpty(Window.Property(item.info.year))</visible>-->
                        <!--</control>-->
                        <control type="label">
                            <width>auto</width>
                            <height>35</height>
                            <aligny>center</aligny>
                            <label>$INFO[Window.Property(item.info.rating)]</label>
                            <font>font12</font>
                            <textcolor>eeffffff</textcolor>
                            <shadowcolor>00000000</shadowcolor>
                            <visible>!String.IsEmpty(Window.Property(item.info.rating))</visible>
                        </control>
                    </control>
                    <!-- Buttons -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>56</height>
                        <bottom>46</bottom>
                        <left>0</left>
                        <itemgap>25</itemgap>
                        <width>100%</width>
                        <control type="button" id="3003">
                            <label>CONTINUE WATCHING</label>
                            <height>56</height>
                            <width>300</width>
                            <font>font20_title</font>
                            <textoffsetx>15</textoffsetx>
                            <textcolor>1faaaaaa</textcolor>
                            <focusedcolor>ffeeeeee</focusedcolor>
                            <selectedcolor>1faaaaaa</selectedcolor>
                            <shadowcolor>22000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>right</align>
                            <texturefocus border="10" diffuse="diffuse.png" colordiffuse="BB444444">white.png</texturefocus>
                            <texturenofocus border="10" diffuse="diffuse.png" colordiffuse="1f262626">white.png</texturenofocus>
                            <alttexturefocus border="10" diffuse="diffuse.png" colordiffuse="BB444444">white.png</alttexturefocus>
                            <alttexturenofocus border="10" diffuse="diffuse.png" colordiffuse="1f262626">white.png</alttexturenofocus>
                            <pulseonselect>no</pulseonselect>
                            <scroll>false</scroll>
                        </control>
                        <control type="button" id="3002">
                            <label>STOP</label>
                            <height>56</height>
                            <width>127</width>
                            <font>font20_title</font>
                            <textoffsetx>15</textoffsetx>
                            <textcolor>1faaaaaa</textcolor>
                            <focusedcolor>ffeeeeee</focusedcolor>
                            <selectedcolor>1faaaaaa</selectedcolor>
                            <shadowcolor>22000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>right</align>
                            <texturefocus border="10" diffuse="diffuse.png" colordiffuse="BB444444">white.png</texturefocus>
                            <texturenofocus border="10" diffuse="diffuse.png" colordiffuse="1f262626">white.png</texturenofocus>
                            <alttexturefocus border="10" diffuse="diffuse.png" colordiffuse="BB444444">white.png</alttexturefocus>
                            <alttexturenofocus border="10" diffuse="diffuse.png" colordiffuse="1f262626">white.png</alttexturenofocus>
                            <pulseonselect>no</pulseonselect>
                            <scroll>false</scroll>
                        </control>
                    </control>
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>65</height>
                        <bottom>41</bottom>
                        <left>-30</left>
                        <itemgap>322</itemgap>
                        <width>100%</width>
                        <control type="group">
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <aligny>center</aligny>
                                <texture colordiffuse="FFEEEEEE">play3.png</texture>
                                <aspectratio>keep</aspectratio>
                                <visible>Control.HasFocus(3001)</visible>
                            </control>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <aligny>center</aligny>
                                <texture colordiffuse="1fAAAAAA">play3.png</texture>
                                <aspectratio>keep</aspectratio>
                                <visible>!Control.HasFocus(3001)</visible>
                            </control>
                        </control>
                        <control type="group">
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <aligny>center</aligny>
                                <texture colordiffuse="FFEEEEEE">disabled.png</texture>
                                <aspectratio>keep</aspectratio>
                                <visible>Control.HasFocus(3002)</visible>
                            </control>
                            <control type="image">
                                <left>0</left>
                                <top>0</top>
                                <aligny>center</aligny>
                                <texture colordiffuse="1fAAAAAA">disabled.png</texture>
                                <aspectratio>keep</aspectratio>
                                <visible>!Control.HasFocus(3002)</visible>
                            </control>
                        </control>
                    </control>
                    <!--<control type="image">-->
                    <!--<bottom>20</bottom>-->
                    <!--<width>46</width>-->
                    <!--<height>46</height>-->
                    <!--<aspect>keep</aspect>-->
                    <!--<texture colordiffuse="ddffffff">nextupicons/00.png</texture>-->
                    <!--<animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>-->
                    <!--</control>-->
                </control>
            </control>
        </control>
    </controls>
</window>
