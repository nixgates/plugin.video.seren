            <colordiffuse>66FFFFFF</colordiffuse>
        </control>

        <!--Title-->
        <control type="label">
            <top>25</top>
            <left>40</left>
            <width>100%</width>
            <height>50</height>
            <label>[UPPERCASE][COLOR $INFO[Window().Property(settings.color)]]Seren[/COLOR] - $INFO[Window.Property(package.name)][/UPPERCASE]</label>
            <font>font37</font>
            <textcolor>white</textcolor>
        </control>

        <!-- Settings List -->
