<window type="dialog">
    <defaultcontrol>2</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
        <origin x="0" y="0"></origin>
    </coordinates>
    <animation effect="fade" time="500">WindowOpen</animation>
    <animation effect="fade" end="0,576" time="500">WindowClose</animation>
    <controls>
        <!-- Background Texture -->
        <control type="image">
            <texture>$INFO[Window().Property(texture.white)]</texture>
            <colordiffuse>FF000000</colordiffuse>
        </control>

        <!-- Background -->
        <control type="image">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Window().Property(seren.fanart)]</texture>
            <colordiffuse>66FFFFFF</colordiffuse>
        </control>

        <!--Title-->
        <control type="label">
            <top>25</top>
            <left>40</left>
            <width>100%</width>
            <height>50</height>
            <label>[UPPERCASE][COLOR $INFO[Window().Property(settings.color)]]Seren[/COLOR] - Cache Assist[/UPPERCASE]</label>
            <font>font37</font>
            <textcolor>white</textcolor>
        </control>

        <!-- Sources List -->

        <control type="list" id="1000">
            <viewtype label="Sources">list</viewtype>
            <onright>2000</onright>
            <left>40</left>
            <top>113</top>
            <width>1300</width>
            <height>890</height>
            <itemgap>20</itemgap>
            <orientation>vertical</orientation>
            <focusposition>1</focusposition>
            <itemlayout height="146">
                <control type="group">
                    <width>1200</width>
                    <left>0</left>
                    <control type="image">
                        <left>0</left>
                        <width>100%</width>
                        <height>136</height>
                        <texture>white.png</texture>
                        <colordiffuse>99362e33</colordiffuse>
                    </control>
                    <control type="label">
                        <top>20</top>
                        <left>25</left>
                        <width>900</width>
                        <height>200</height>
                        <font>font10</font>
                        <textcolor>66FFFFFF</textcolor>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>[B][UPPERCASE]$INFO[ListItem.Property(release_title)][/UPPERCASE][/B]</label>
                    </control>
                    <control type="label">
                        <top>75</top>
                        <left>25</left>
                        <width>800</width>
                        <height>200</height>
                        <font>font10</font>
                        <textcolor>66FFFFFF</textcolor>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>Seeds: [B][UPPERCASE]$INFO[ListItem.Property(Seeds)][/UPPERCASE][/B] | Size: [B][UPPERCASE]$INFO[ListItem.Property(size)][/UPPERCASE][/B]</label>
                    </control>
                    <control type="image">
                            <left>0</left>
                            <width>100%</width>
                            <height>136</height>
                            <texture>white.png</texture>
                            <colordiffuse>55000000</colordiffuse>
                    </control>
                </control>
            </itemlayout>

            <focusedlayout height="320">
                <control type="group">
                    <control type="image">
                        <left>0</left>
                        <top>10</top>
                        <width>100%</width>
                        <height>290</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF362e33</colordiffuse>
                    </control>
                    <control type="image">
                        <visible>!String.IsEmpty($INFO[ListItem.Property(provider.image)])</visible>
                        <texture>$INFO[ListItem.Property(provider.image)]</texture>
                    </control>
                    <control type="image">
                        <top>50</top>
                        <left>10</left>
                        <width>200</width>
                        <height>200</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window().Property(seren.logo)]</texture>
                    </control>
                    <control type="label">
                        <top>75</top>
                        <left>210</left>
                        <width>900</width>
                        <height>50</height>
                        <font>font45</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>[B][UPPERCASE]$INFO[ListItem.Property(release_title)][/UPPERCASE][/B]</label>
                    </control>
                    <control type="label">
                        <top>125</top>
                        <left>210</left>
                        <width>800</width>
                        <height>200</height>
                        <font>font10</font>
                        <textcolor>66FFFFFF</textcolor>
                        <align>left</align>
                        <aligny>top</aligny>
                        <wrapmultiline>true</wrapmultiline>
                        <label>[COLOR $INFO[Window.Property(settings.color)]]Seeds[/COLOR]: [B][UPPERCASE]$INFO[ListItem.Property(Seeds)][/UPPERCASE][/B] | [COLOR $INFO[Window.Property(settings.color)]]Size[/COLOR]: [B][UPPERCASE]$INFO[ListItem.Property(size)][/UPPERCASE][/B]</label>
                    </control>
                    <control type="label">
                        <top>160</top>
                        <left>210</left>
                        <width>800</width>
                        <height>200</height>
                        <font>font10</font>
                        <textcolor>66FFFFFF</textcolor>
                        <align>left</align>
                        <aligny>top</aligny>
                        <wrapmultiline>true</wrapmultiline>
                        <label>$INFO[ListItem.Property(info)]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Side Info -->
        <control type="group">
            <top>120</top>
            <right>27</right>
            <width>400</width>
            <control type="group">
                <top>0</top>
                <height>300</height>
                <control type="image">
                    <width>400</width>
                    <height>120</height>
                    <texture>white.png</texture>
                    <colordiffuse>99362e33</colordiffuse>
                </control>
                <control type="grouplist" id="2000">
                    <top>20</top>
                    <onleft>1000</onleft>
                    <height>100%</height>
                    <width>100%</width>
                    <itemgap>10</itemgap>
                    <control type="button" id="2001">
                        <width>100%</width>
                        <height>80</height>
                        <textoffsetx>20</textoffsetx>
                        <texturefocus colordiffuse="$INFO[Window().Property(settings.color)]">white.png</texturefocus>
                        <texturenofocus colordiffuse="22000000">white.png</texturenofocus>
                        <label>$ADDON[plugin.video.seren 30495]</label>
                        <align>right</align>
                        <textcolor>white</textcolor>
                     </control>
                </control>
            </control>

        </control>
    </controls>
</window>
